# robust_config.env - 稳健版应用启动器配置
# 这个文件包含RobustAppLauncherAgent的详细配置

# === 基础配置 ===
# 调试模式（启用后会记录详细日志）
DEBUG_MODE=false

# 日志级别（DEBUG, INFO, WARNING, ERROR, CRITICAL）
LOG_LEVEL=INFO

# === 缓存配置 ===
# 是否启用缓存
CACHE_ENABLED=true

# 缓存有效期（秒）
CACHE_TTL=3600

# 应用缓存大小
APP_LAUNCHER_AGENT_CACHE_SIZE=1000

# === 扫描配置 ===
# 最大扫描应用数量（防止过多应用影响性能）
MAX_APPS_SCAN=1000

# 是否扫描App Paths注册表
SCAN_APP_PATHS=true

# 是否扫描Uninstall注册表
SCAN_UNINSTALL_REGISTRY=true

# 是否扫描用户Uninstall注册表
SCAN_USER_UNINSTALL_REGISTRY=true

# 是否扫描快捷方式
SCAN_SHORTCUTS=true

# 是否扫描开始菜单
SCAN_START_MENU=true

# 是否扫描桌面
SCAN_DESKTOP=true

# === 启动配置 ===
# 启动超时时间（秒）
LAUNCH_TIMEOUT=30

# 是否等待应用启动完成
WAIT_FOR_STARTUP=true

# 启动等待时间（秒）
STARTUP_WAIT_TIME=5

# 是否检查应用是否已在运行
CHECK_ALREADY_RUNNING=true

# 最大重试次数
MAX_RETRIES=3

# 是否需要提升权限（以管理员身份运行）
ELEVATE_IF_NEEDED=false

# 是否使用Shell执行（对于某些特殊应用）
USE_SHELL_EXECUTE=false

# === 安全配置 ===
# 是否验证可执行文件
VALIDATE_EXECUTABLE=true

# 是否监控启动的进程
MONITOR_PROCESSES=true

# === 性能配置 ===
# 是否启用增量扫描
ENABLE_INCREMENTAL=true

# 异步扫描的并发数
ASYNC_CONCURRENT_LIMIT=5

# 扫描超时时间（秒）
SCAN_TIMEOUT=60

# === 日志配置 ===
# 是否记录启动详情
LOG_LAUNCH_DETAILS=true

# 是否记录到文件
LOG_TO_FILE=false

# 日志文件最大大小（MB）
LOG_FILE_MAX_SIZE=10

# 保留的日志文件数量
LOG_FILE_BACKUP_COUNT=5

# === 特殊应用配置 ===
# 需要特殊处理的应用列表（JSON格式）
SPECIAL_APPS={
    "Chrome": {
        "multiple_instances": true,
        "profile_args": "--user-data-dir"
    },
    "Firefox": {
        "multiple_instances": true,
        "profile_args": "-profile"
    },
    "cmd": {
        "elevated": true,
        "shell": true
    }
}

# === 网络配置 ===
# 是否检查网络连接（对于需要网络的应用）
CHECK_NETWORK=false

# 网络检查超时（秒）
NETWORK_TIMEOUT=5

# === 开发者配置 ===
# 是否启用开发模式（额外的调试信息）
DEV_MODE=false

# 是否启用性能分析
ENABLE_PROFILING=false

# 是否生成测试报告
GENERATE_TEST_REPORT=false